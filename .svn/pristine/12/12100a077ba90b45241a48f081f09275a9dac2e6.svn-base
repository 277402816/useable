<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

	<LinearLayout
	    android:id="@+id/item_title_frame"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/welcome_height"
	    android:layout_marginTop="3dp"
	    android:orientation="horizontal">
	    
	   	<TextView
	   	    android:id="@+id/item_label"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="match_parent"
	   	    android:gravity="left|center_vertical"
	   	    android:textAppearance="?android:attr/textAppearanceMedium"
	   	    android:textColor="@color/black"
	   	    android:textStyle="bold" 
	        android:singleLine="true"
            android:ellipsize="end"
	   	    android:text="@string/todo_trace_plan_label"/>
	
	   	<TextView
	   	    android:id="@+id/item_value"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="match_parent"
	   	    android:gravity="left|center_vertical"
	   	    android:paddingLeft="10dp"
	   	    android:textColor="@color/red"
	        android:singleLine="true"
            android:ellipsize="end"
	   	    android:textAppearance="?android:attr/textAppearanceMedium" />

	</LinearLayout>

	<LinearLayout
	    android:id="@+id/item_content_frame1"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/welcome_height"
	    android:orientation="horizontal">

	   	<TextView
	   	    android:id="@+id/item_text_label"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="match_parent"
	   	    android:gravity="left|center_vertical"
	   	    android:textAppearance="?android:attr/textAppearanceMedium"
	   	    android:textColor="@color/black"
	        android:singleLine="true"
            android:ellipsize="end"
	   	    />
	
	   	<TextView
	   	    android:id="@+id/item_text_value"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="match_parent"
	   	    android:gravity="left|center_vertical"
	   	    android:paddingLeft="10dp"
	   	    android:textColor="@color/red"
	        android:singleLine="true"
            android:ellipsize="end"
	   	    android:textAppearance="?android:attr/textAppearanceMedium" />

	</LinearLayout>

	<LinearLayout
	    android:id="@+id/item_content_frame2"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/welcome_height"
	    android:orientation="horizontal">

	   	<TextView
	   	    android:id="@+id/item_text_label1"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="match_parent"
	   	    android:gravity="left|center_vertical"
	   	    android:textAppearance="?android:attr/textAppearanceMedium"
	   	    android:textColor="@color/black"
	        android:singleLine="true"
            android:ellipsize="end"
	   	    />
	
	   	<TextView
	   	    android:id="@+id/item_text_value1"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="match_parent"
	   	    android:gravity="left|center_vertical"
	   	    android:paddingLeft="10dp"
	   	    android:textColor="@color/red"
	        android:singleLine="true"
            android:ellipsize="end"
	   	    android:textAppearance="?android:attr/textAppearanceMedium" />

	</LinearLayout>
</LinearLayout>