<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/re_layout">
    
	<TextView 
		android:id="@+id/car_info_row_keytext"
		android:layout_width="125dp"
		android:layout_height="@dimen/listview_each_height"
		android:layout_centerVertical="true"
		android:layout_alignParentLeft="true"
		android:textSize="@dimen/default_label_size"
		android:gravity="right|center_vertical"
		android:singleLine="true"
		android:textColor="@color/black"/>

	<TextView
		android:id="@+id/car_info_row_key_tail"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/car_info_row_keytext"
		android:layout_marginLeft="5dp"
		android:textSize="@dimen/default_label_size"
		android:gravity="right|center_vertical"
		android:text="@string/key_tail"
		android:textColor="@color/black"/>
	
	<TextView
		android:id="@+id/car_info_row_valuetext"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/car_info_row_keytext"
		android:layout_alignParentRight="true"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:paddingRight="30dp"
		android:gravity="left|center_vertical"
		android:textSize="@dimen/default_label_size"
		android:singleLine="false"
		android:textColor="@color/black"/>

</RelativeLayout>