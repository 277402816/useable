<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_list_height"
        android:layout_centerVertical="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/list_oppo_action_content"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="10dip"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
	        android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/default_label_size" />

        <TextView
            android:id="@+id/list_oppo_do_time"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@+id/list_oppo_action_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
	        android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/default_label_size" />

        <TextView
            android:id="@+id/list_oppo_do_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/list_oppo_action_content"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="5dip"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/gray"
	        android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/default_font_size" />

        <TextView
            android:id="@+id/list_oppo_action_type"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@+id/list_oppo_do_time"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/list_oppo_do_status"
            android:layout_marginLeft="120dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/gray"
	        android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/default_font_size" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>