<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_background">
   <LinearLayout 
        android:id="@+id/car_resource_info_subtitle_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/section_header2"
        android:gravity="center_vertical"
        android:orientation="horizontal">
	    <TextView
	        android:id="@+id/car_resource_info_subtitle0"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_weight="1.0"
	        android:gravity="left|center_vertical"
	        android:text="@string/car_resource_info_title"
	        android:textColor="#FFFFFF"
		    android:singleLine="true"
	        android:ellipsize="end"
	        android:textSize="@dimen/font_size" />
	    
    </LinearLayout>
            <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/car_resource_info_subtitle_bar"
        android:layout_alignParentLeft="true">
		<LinearLayout 
	        android:id="@+id/car_resource_info_list"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
    
