<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_list_height"
        android:layout_centerVertical="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >
            

    <TextView
        android:id="@+id/purchase_car_info_list_vehicle_type"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dip"
        android:textColor="@color/black"
	    android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/default_label_size" />

    <TextView
        android:id="@+id/purchase_car_info_list_vehicle_model"      
        android:layout_width="160dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/purchase_car_info_list_vehicle_type"
        android:textColor="@color/black"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/default_label_size" />
        
    <TextView
        android:id="@+id/purchase_car_info_list_date"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/purchase_car_info_list_vehicle_type"
        android:layout_toRightOf="@id/purchase_car_info_list_vehicle_type"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="25dp"
        android:textColor="@drawable/text_selected_color_selector"
	    android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/default_font_size" />

    <TextView
        android:id="@+id/purchase_car_info_list_purchasestatus"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/purchase_car_info_list_vehicle_type"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@id/purchase_car_info_list_date"
        android:textColor="@drawable/text_selected_color_selector"
	    android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/default_font_size" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>