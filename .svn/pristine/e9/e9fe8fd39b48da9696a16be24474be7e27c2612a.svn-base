<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp" >

    <RelativeLayout
        android:id="@+id/customer_content"
        android:layout_width="300dp"
        android:layout_height="wrap_content" >

        <!--
        android:layout_height="wrap_content"
        android:minHeight="@dimen/default_list_height"

        -->

        <TextView
            android:id="@+id/customer_list_customer_id"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="5dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/default_font_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/customer_list_custName"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="10dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/default_label_size" />

        <TextView
            android:id="@+id/customer_list_mobile"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/customer_list_custName"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/customer_list_custName"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/default_label_size" />
        
        <TextView
            android:id="@+id/customer_list_custType"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customer_list_custName"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dip"
            android:textColor="@color/gray"
            android:ellipsize="end"
	        android:singleLine="true"
            android:textSize="@dimen/default_font_size" />

        <TextView
            android:id="@+id/customer_owner"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_list_mobile"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@id/customer_list_mobile"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/default_font_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:textAlignment="center" >

        <ImageView
            android:id="@+id/plan_state"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/alert"
            android:src="@drawable/warning_icon"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>