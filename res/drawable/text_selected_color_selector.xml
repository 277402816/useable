<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 没有焦点时字体颜色 -->
    <item android:state_selected="false" android:color="@color/gray"/>
    <!-- 选中时的文字颜色 -->
    <item android:state_selected="true" android:color="#600000"/>
    <item android:state_focused="false" android:color="#600000"/>
    <!-- 获得焦点时的文字颜色 -->
    <item android:state_focused="true" android:color="#600000"/>
    <item android:state_pressed="true" android:color="#600000"/>
    <item android:state_pressed="false" android:color="#600000"/>

</selector>