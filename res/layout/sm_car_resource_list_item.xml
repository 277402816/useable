<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_list_height" 
    android:paddingBottom="10dp"
    android:layout_centerVertical="true">


        <TextView
            android:id="@+id/car_resource_list_chasis_no"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="10dip"
            android:ellipsize="end"
	        android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/default_label_size" />

        <TextView
            android:id="@+id/car_resource_list_vehicle_config"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/car_resource_list_chasis_no"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="5dip"
            android:ellipsize="end"
	        android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/default_font_size" />

        <TextView
            android:id="@+id/car_resource_list_interior_color"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/car_resource_list_vehicle_config"
            android:layout_toRightOf="@id/car_resource_list_vehicle_config"
            android:textColor="@color/gray"
	        android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/default_font_size" />

        <TextView
            android:id="@+id/car_resource_list_car_status"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/car_resource_list_interior_color"
            android:layout_toRightOf="@+id/car_resource_list_interior_color"
            android:textColor="@drawable/text_selected_color_selector"
            android:singleLine="true"
            android:textSize="@dimen/default_font_size" />

</RelativeLayout>