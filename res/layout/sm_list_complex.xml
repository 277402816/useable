<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:paddingBottom="10dip"
    android:paddingLeft="25dip"
    android:paddingTop="10dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/list_complex_name"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:textSize="@dimen/default_label_size" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip">
        <TextView
            android:id="@+id/list_complex_phone_num"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:textSize="@dimen/default_label_size" />
        </LinearLayout>
                <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal" >
        <TextView 
            android:id="@+id/list_complex_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/default_font_size"
             android:textColor="@color/gray" 
            android:text=""/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/list_complex_car_brand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/default_font_size"
            android:textAppearance="?android:attr/textAppearanceSmall"
	        android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/list_complex_car_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/default_font_size"
                android:textAppearance="?android:attr/textAppearanceSmall"
	            android:singleLine="true"
            	android:ellipsize="end"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/list_complex_flow_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/default_font_size"
                android:textAppearance="?android:attr/textAppearanceSmall"
	            android:singleLine="true"
            	android:ellipsize="end"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_weight="6"
        android:layout_gravity="center_vertical">
        <ImageView 
            android:id="@+id/plan_state"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
        	android:visibility="invisible"
        	android:src="@drawable/warning_icon"
        	android:contentDescription="@string/alert"
        	android:layout_gravity="center_vertical"
             />
    </LinearLayout>

</LinearLayout>