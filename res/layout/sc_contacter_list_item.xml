<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_list_height"
        android:layout_centerVertical="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/info_contacter_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dip"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
	            android:singleLine="true"
            	android:ellipsize="end"
                android:textSize="@dimen/default_label_size" />

            <TextView
                android:id="@+id/info_contacter_mobile"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/info_contacter_name"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/info_contacter_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
	            android:singleLine="true"
            	android:ellipsize="end"
                android:textSize="@dimen/default_label_size" />

            <TextView
                android:id="@+id/info_contacter_relation"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/info_contacter_name"
                android:layout_below="@id/info_contacter_name"
                android:layout_marginTop="5dip"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@drawable/text_selected_color_selector"
	            android:singleLine="true"
            	android:ellipsize="end"
                android:textSize="@dimen/default_font_size" />

            <TextView
                android:id="@+id/info_contacter_type"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/info_contacter_relation"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/info_contacter_relation"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@drawable/text_selected_color_selector"
	            android:singleLine="true"
            	android:ellipsize="end"
                android:textSize="@dimen/default_font_size" />

            <TextView
                android:id="@+id/info_contacter_prime"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/info_contacter_type"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/info_contacter_type"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@drawable/text_selected_color_selector"
	            android:singleLine="true"
            	android:ellipsize="end"
                android:textSize="@dimen/default_font_size" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>