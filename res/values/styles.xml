<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AndroidCRMTheme" parent="@style/Theme.Sherlock">
		<item name="actionBarItemBackground">@color/transparent</item>
		<item name="android:actionBarItemBackground">@color/transparent</item>
    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="bottom_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/bottom_icon_height</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="bottom_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF8A8A8A</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="bottom_tab">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:layout_marginBottom">2dip</item>
    </style>

    <style name="bottom_bar_tab" parent="@style/bottom_tab">
        <item name="android:background">@layout/bottom_bar_bg_tab</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>

    <style name="Theme_Dialog_Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="load_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/btn_toggle_bg</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="StyleOfToggle" parent="@android:Theme.Black">

        <!-- Tell Android to use a custom style when creating a ToggleButton -->
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <!-- Perhaps more theme items here...? -->
    </style>

    <style name="Text_Selected_Color">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>